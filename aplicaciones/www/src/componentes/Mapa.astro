  #informacion {
    pointer-events: none;
    p {
      margin: 0;
    }

    .negrita {
      font-weight: bold;
    }

    .infoCategoria {
      font-size: 0.65em;
      margin-top: 3px;
      position: relative;
    }

    .valorMiniColombina {
      z-index: 2;
    }

    .miniColombina {
      display: block;
      position: absolute;
      top: 0;
      height: 0.85em;
      opacity: 0.3;
      z-index: 1;
    }
  }

  /// ✂️ Cortes pantalla
  @media screen and (min-width: $corte1) {
    #contenedorMapa {
      margin: 1em;
    }
  }

  @media screen and (min-width: $corte3) {
  }
</style>

