      margin: 0;
    }

    .infoCategoria {
      display: flex;
      align-items: center;
      line-height: 0.8;
      margin-bottom: 5px;
    }
    .referencia {
      display: block;
      height: 5px;
      width: 5px;
      border-radius: 50%;
      margin: 0.3em;

      &.colegio {
        background-color: var(--c1);
      }

      &.casa {
        background-color: var(--c2);
      }
      &.trabajo {
        background-color: var(--c3);
      }
      &.ninero {
        background-color: var(--c4);
      }
      &.mayor {
        background-color: var(--c5);
      }
      &.menor {
        background-color: var(--c6);
      }
      &.solo {
        background-color: var(--c7);
      }
      &.otro {
        background-color: var(--c8);
      }
    }
  }

  #leyendaMapa {
